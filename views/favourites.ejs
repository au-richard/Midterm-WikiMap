<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">

  <!-- Bootstrap CSS -->
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.2.1/css/bootstrap.min.css"
    integrity="sha384-GJzZqFGwb1QTTN6wy59ffF1BuGJpLSa9DkKMp0DgiMDm4iYMj70gZWKYbI706tWS" crossorigin="anonymous">

  <link rel="stylesheet" href="/styles/favourites.css" type="text/css" />
  <script type="text/javascript" src="/routes/favourites.js"></script>

  <title>My Favourites</title>
</head>

<body>
  <%- include('partials/_header') %>
    <main>
      <h1>My Favourites</h1>
      <h5>Total Number of Favourites: <%= favourites.length %>
      </h5>
      <section id="favourite-list">
        <% for(let fave of favourites) { %>
          <table class="favourites-table">
            <tr>
              <td>
                <%= fave.title %>
              </td>
              <td>
                <form method="POST" action="/routes/favourites/<%= fave %>/delete">
                  <button type="submit" class="btn btn-danger">Delete</button>
                </form>
              </td>
            </tr>
          </table>
          <% } %>
      </section>
    </main>
</body>

</html>
