<body id="Edit-marker">
  <%- include('partials/_header') %>
      <h1>Create Or Edit marker</h1>
      <% for(let map in maps) { %>
      <form method="POST" action="/markers/add/<%= maps[map].id%>" id="markerEditF">
        <label for="title"><Marker Name></label>
        <br>
        <input id="marker-title" type="text" name="title" placeholder="Enter A Marker title" required>
        <br>
        <label for="description">Description</label>
        <br>
        <input id="marker-description" input type="text" step="any" name="description" placeholder="Enter description" required>
        <br>
        <label for="image_url">image url</label>
        <br>
        <input id="marker-image_url" input type="text" step="any" name="image_url" placeholder="Enter image url" required>
        <br>
        <label for="map-latitude">Latitude:</label>
        <br>
        <input id="map-latitude" input type="number" step="any" name="latitude" placeholder="Enter Latitude" required>
        <br>
        <label for="map-longitude">Longitude:</label>
        <br>
        <input id="map-longitude" input type="number" step="any" name="longitude" placeholder="Enter Longitude" required>
        <br>
        <button type="submit" class="btn btn-success">Create</button>
      </form>
      <% } %>
  </body>
    <!-- bootstrap js-->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
     <!-- App JS -->
     <script type="text/javascript" src="/vendor/jquery-3.0.0.js"></script>
     <script type="text/javascript" src="/scripts/viewApp.js"></script>
</body>

</html>
